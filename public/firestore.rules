rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow anyone to read participants (visualization)
    match /participants/{docId} {
      allow read: if true;
      // WARNING: the following write rule allows unauthenticated writes.
      // This is INSECURE and intended only for quick demos where you accept the risk.
      // For production revert to: allow write: if request.auth != null && request.auth.token.admin == true;
      allow write: if true;
    }
  }
}
